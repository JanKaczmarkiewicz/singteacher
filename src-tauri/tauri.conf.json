{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "vocaltrainer",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "fs": {
        "scope": [
          "$APPLOCALDATA"
        ]
      },
      "all": true,
      "shell": {
        "scope": [
          {
            "name": "down_on_spot",
            "cmd": "/Users/raf/projects/DownOnSpot/target/release/down_on_spot",
            "args": true
          },
          {
            "name": "convert",
            "cmd": "/Users/raf/projects/DownOnSpot/target/release/down_on_spot",
            "args": true
          }
        ],
        "all": true,
        "execute": true,
        "open": true
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "vocaltrainer",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}